<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@color/beige_bg">

   <Button
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_finish"
        style="@style/ButtonStyle"
        android:textSize="40sp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_whose_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_x" />

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/tv_turn"
            android:textSize="50sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_gameCell_11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_o"
            android:layout_margin="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gameCell_12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_gameCell_13"
            app:layout_constraintStart_toEndOf="@+id/iv_gameCell_11"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gameCell_13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gameCell_23"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_13" />

        <ImageView
            android:id="@+id/iv_gameCell_33"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_23" />

        <ImageView
            android:id="@+id/iv_gameCell_22"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_gameCell_23"
            app:layout_constraintStart_toEndOf="@+id/iv_gameCell_21"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_12" />

        <ImageView
            android:id="@+id/iv_gameCell_32"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_gameCell_33"
            app:layout_constraintStart_toEndOf="@+id/iv_gameCell_31"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_22" />

        <ImageView
            android:id="@+id/iv_gameCell_31"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_21" />

        <ImageView
            android:id="@+id/iv_gameCell_21"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_standard_container"
            tools:src="@drawable/ic_x"
            android:layout_margin="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gameCell_11" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
